<!--        <view class="weui-media-box__desc"><text>{{signOff_date}} : </text><text>{{value[1].match_date}}</text></view>-->
        <view class="weui-media-box__desc" wx:if="{{value[1].match_date==null}}"><text>{{signOff_date}} : </text><text>{{notSignOff}}</text></view>
        <view class="weui-media-box__desc" wx:elif="{{value[1].match_date}}"><text>{{signOff_date}} : </text><text>{{value[1].match_date}}</text></view>






        <view class="weui-media-box__desc"><text>{{approval}} : </text><text>{{value[1].match_approval}}</text></view>


        <view class="weui-cell weui-cell_active weui-cell_disabled" >

            <!--                          <view class="weui-cell__bd">-->

            <view class="button-sp-area button-area" >

                <view class="taskButtons">
                    <button class="weui-btn_primary" id="{{value[1].match_sn}}" bindtap="deletePersonnel">{{deleteButton}}</button>



                </view>
                <view id="{{value[1].match_member}}" bindtap="downloadFile" class="myProfile_button_text" wx:if="{{value[1].match_date}}">

                    <image class="myProfile_icons"  src="../../images/contract.png" mode="aspectFit"  ></image>
                    <view>查看簽署的協議</view>

                </view>
            </view>
