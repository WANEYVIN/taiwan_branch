<view class="page" data-weui-theme="{{theme}}">

    <view class="center weui-cell__hd" bindtap="myProfile"  id="avatar">
<!--        <open-data class="user-avatar" type="userAvatarUrl" ></open-data>-->
        <view style="position: relative;margin-right: 5px;margin-top: 5px;" >
        <open-data class="userinfo-avatar" type="userAvatarUrl" ></open-data>
            <view wx:if="{{badge > 0}}">
            <text class="weui-badge" style="position: absolute; top: 1em; right: 1em;">{{badge}}</text>
            </view>

            <view wx:if="{{mgmt_badge > 0}}">
            <text class="weui-badge badge_colour" style="position: absolute; top: 7em; right: 1em;" >{{mgmt_badge}}</text>
            </view>

        </view>



</view>

