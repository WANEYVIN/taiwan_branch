	<view class="weui-cells">
			<view class="weui-cell weui-cell_active weui-cell_access" bindtap="notification" >
				<view class="weui-cell__bd">{{ifMatched}}</view>
				<view class="weui-cell__ft" style="font-size: 0;">
					<text style="vertical-align: middle; font-size: 17px;">查看</text>
					<text class="weui-badge weui-badge_dot" style="margin-left: 5px; margin-right: 5px;"></text>
				</view>
			</view>
		</view>




    <view class="weui-panel weui-panel_access">
<!--        <view class="weui-panel__hd">{{ifMatched}}</view>-->

        <block wx:for="{{list}}" wx:key="list" wx:for-index="idx">


                <view wx:if="{{item!=list.matched && item!=list.signOff}}" class="taskProfile"  catchtap="viewTask" id="{{idx}}">




                        <view class="weui-panel__bd">
                            <view class="weui-media-box weui-media-box_text">
                                <h4 class="weui-media-box__title">{{item.task_name}}</h4>
                                <view class="weui-media-box__desc"><text>{{task_corporation}} : </text><text>{{item.task_corporation}}</text></view>
                                <view class="weui-media-box__desc"><text>{{task_date}} : </text><text>{{item.task_date}}</text></view>
                                <view class="weui-media-box__desc"><text>{{task_description}} : </text><text>{{item.task_description}}</text></view>
                                <view class="weui-media-box__desc"><text>{{task_requirement}} : </text><text>{{item.task_requirement}}</text></view>
                                <view class="weui-media-box__desc"><text>{{task_address}} : </text><text>{{item.task_address}}</text></view>
                                <view class="weui-media-box__desc"><text>{{task_expiration}} : </text><text>{{item.task_expiration}}</text></view>

                            </view>
                        </view>




            </view>




        </block>
    </view>



        <view wx:if="{{commercials}}">

            <view class="weui-cells">
                <view class="weui-cell weui-cell_active " bindtap="notification" >
                    <view class="weui-cell__bd">工作之余 猜你喜欢</view>
                    <view class="weui-cell__ft" style="font-size: 0;">
<!--                        <text style="vertical-align: middle; font-size: 17px;">查看</text>-->
<!--                        <text class="weui-badge weui-badge_dot" style="margin-left: 5px; margin-right: 5px;"></text>-->
                    </view>
                </view>
            </view>


            <block wx:for="{{ads}}" wx:key="list" wx:for-index="idx">
<!--            <image style="width: 300px; height: 200px; background-color: #eeeeee;" mode="{{mode}}" src="{{item.product_img}}"></image>-->
            <image style="width: 100%;  background-color: #eeeeee;" mode="{{mode}}" src="{{item.product_img}}"></image>
            <view class="weui-media-box__desc"><text>{{product_name}} : </text><text>{{item.product_name}}</text></view>
            <view class="weui-media-box__desc"><text>{{product_price}} : </text><text>{{item.product_price}}元</text></view>
            <view class="weui-media-box__desc"><text>{{product_escription}} : </text><text>{{item.product_description}}</text></view>

</block>
        </view>





        <!-- end of test -->

<!--</view>-->
</view>



<view class="fadeIn" wx:if="{{dialog2}}">
    <!--            <view class="weui-mask" bindtap="close"></view>-->
    <view class="weui-half-screen-dialog">
        <view class="weui-half-screen-dialog__hd">
            <view class="weui-half-screen-dialog__hd__side" bindtap="close">
                <a class="weui-icon-btn">返回<i class="weui-icon-back-arrow-thin"></i></a>
            </view>
            <view class="weui-half-screen-dialog__hd__main">
                <strong class="weui-half-screen-dialog__title">{{request_title}}</strong>
                <view class="weui-half-screen-dialog__subtitle">{{request_subtile}}</view>
            </view>
            <!--                    <view class="weui-half-screen-dialog__hd__side">-->
            <!--                        <a class="weui-icon-btn">更多<i class="weui-icon-more"></i></a>-->
            <!--                    </view>-->
        </view>
        <view class="weui-half-screen-dialog__bd">
            <view class="weui-half-screen-dialog__desc">
                {{notice_request}}
            </view>
            <view class="weui-half-screen-dialog__tips">
                {{always_accept_request}}
            </view>
        </view>
        <view class="weui-half-screen-dialog__ft">
            <!--                    <a class="weui-btn weui-btn_default" bindtap="close">辅助操作</a>-->
            <a class="weui-btn weui-btn_primary" bindtap="close">{{subscribe}}</a>
        </view>
    </view>
</view>




